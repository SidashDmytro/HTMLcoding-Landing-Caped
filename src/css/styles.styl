// Header end

// Content start

.content
	display flex
	flex-direction column
	gap 10px 0
	margin-bottom 25px
	&__posts
		display flex
		width 100%
		justify-content space-between
		&-item
			position relative
			a
				img
					width 100%
					height auto
					border-radius 10px
					&:hover
						opacity .75
			.heart
				position absolute
				display flex
				justify-content center
				align-items center
				background #FFF
				top 10px
				right 10px
				width 38px
				height 38px
				border-radius 50%
				z-index 2
				&:before
					content '‚ô°'
				&:hover
					&:before
						content '‚ù§Ô∏è'
				&-active
					&:before
						content '‚ù§Ô∏è'
	.horizontal
		flex-direction column
		gap 10px 0
		img
			min-width 300px
			min-height 100px
	.vertical
		flex-direction row
		gap 0 10px
		img
			min-width 145px
			min-height 213px

// Content end

// Footer start

footer
	display flex
	justify-content center
	align-items center
	font-size 12px
	p
		margin 0

// Footer end

// Search form start

form.search-form
	display none
	z-index 101
	top 75px
	position fixed
	width 100%
	left 0
	input
		display block
		padding 15px 15px 15px 40px
		width 80%
		margin 0 auto
		border 0
		font-size 18px
		border-radius 3px
		background #fff url('img/icon-search.svg') no-repeat 10px center
		background-size 25px 25px
		box-shadow 0 0 50px rgb(0 0 0 / 50%)

.overlay
	display none
	z-index 100
	top 0
	position fixed
	background rgba(255,255,255,.5)
	height 100%
	width 100%
	left 0

// Search form end